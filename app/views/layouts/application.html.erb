<!DOCTYPE html>
<html>
  <head>
    <title>Golfbook</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light bg-light">
      <ul class="nav nav-pills">
        <li class="nav-item"><%=link_to 'Home', root_url, {:class => "nav-link"} %></li>
        <li class="nav-item"><%=link_to 'About', about_url, {:class => "nav-link"} %></li>
        <li class="nav-item"><%=link_to 'Teams', teams_url, {:class => "nav-link"} %></li>
        <li class="nav-item"><%=link_to 'Contact', contact_url, {:class => "nav-link"} %></li>
      </ul>     
    </nav>
    <%= yield %>
  </body>
</html>
